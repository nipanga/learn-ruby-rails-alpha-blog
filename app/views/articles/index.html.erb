<div id="page-content">
  <h1 class="text-center mt-4">Listing all Articles</h1>
  <br>
  <div class="container">
    <% @articles.each do |a| %>
        <div class="row justify-content-md-center">
          <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
              <div class="card-header font-italic">by Nipanga</div>
              <div class="card-body">
                <h5 class="card-title"><%= link_to a.title, article_path(a), class: 'text-success' %></h5>
                <p class="card-text"><%= truncate(a.description, length: 100) %></p>
                <%= link_to 'View', article_path(a), class: 'btn btn-outline-primary text-primary' %>
                <%= link_to 'Edit', edit_article_path(a), class: 'btn bbtn btn-outline-info text-info' %>
                <%= link_to 'Delete', article_path(a), method: :delete, class: 'btn btn-outline-danger text-danger',
                    data: {confirm: 'Are you sure?' }%>
              </div>
              <div class="card-footer text-muted">
                <small>
                  Create <%= time_ago_in_words(a.created_at) %> ago,
                  edited <%= time_ago_in_words(a.updated_at) %> ago
                  </small>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>