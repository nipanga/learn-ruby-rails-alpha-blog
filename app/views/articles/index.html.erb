<p id="notice"><%= notice %></p>
<h1>Articles</h1>
<%= link_to 'New Article', new_article_path %>
<br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |a| %>
      <tr>
        <td><%= a.title %></td>
        <td><%= a.description %></td>
        <td>
          <%= link_to 'Show', a %>
          <%= link_to 'Edit', edit_article_path(a) %>
          <%= link_to 'Delete', article_path(a), method: :delete, data: {confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Create new Article', new_article_path %></p>